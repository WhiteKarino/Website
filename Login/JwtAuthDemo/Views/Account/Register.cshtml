@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="text-center">Register</h2>
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Username:</label>
                            <input type="text" name="username" class="form-control transparent-input" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Password:</label>
                            <input type="password" name="password" class="form-control transparent-input" required />
                        </div>
                        <button type="submit" class="btn btn-success w-100">Register</button>
                    </form>
                    <p class="mt-3 text-center">
                        Already have an account? <a href="/Account/Login">Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .transparent-input {
        background: transparent !important;
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: #000;
    }

    .transparent-input::placeholder {
        color: rgba(0, 0, 0, 0.5);
    }
</style>
