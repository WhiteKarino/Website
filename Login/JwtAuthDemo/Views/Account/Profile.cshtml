@{
    ViewData["Title"] = "Profile";
}

<h2>Your Profile</h2>
<div class="profile-container">
    <div class="profile-info">
        <p><strong>Username:</strong> @Context.Session.GetString("Username")</p>
        <p><strong>First Name:</strong> @Context.Session.GetString("FirstName")</p>
        <p><strong>Last Name:</strong> @Context.Session.GetString("LastName")</p>
        <p><strong>Address:</strong> @Context.Session.GetString("Address")</p>
        <p><strong>Phone:</strong> @Context.Session.GetString("Phone")</p>
    </div>
</div>

<div class="actions">
    <a href="/Account/UpdateProfile" class="btn btn-primary">Update Profile</a>
</div>
